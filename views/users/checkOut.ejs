              <div class="card-body" style="background-color: rgb(254, 203, 122)">
                <h5 class="card-title">
                  <%= address.fullName %>
                </h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  <%= address.phone %>
                </h6>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  <%= address.location %>
                </h6>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  <%= address.city %>
                </h6>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                  <%= address.state %>
