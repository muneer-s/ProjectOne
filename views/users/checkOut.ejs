              Swal.fire({
                icon: 'error',
                title: 'Invalid Coupon',
                text: `${data.message}`
              });
            } else if (data.couponsUsed) {
              Swal.fire({
                icon: 'error',
                title: 'Coupon used',
                text: 'coupon alread used'
              });
            } else if (data.mimimumValueError) {
              Swal.fire({
                icon: 'error',
                title: 'coupon requirements',
                text: 'minimum checkout price not met for this coupon'
              });
            }
            else {
              Swal.fire({
                icon: 'success',
                title: 'Valid Coupon',
                text: `${data.message}`
              });
              setTimeout(() => {
                window.location.reload()
              }, 1500);
            }
          })
      })
    </script>

    <!--address form validate-->
    <script>
      function validateForm() {
        var form = document.getElementById("addressForm");
        var fullName = form.elements["fullName"].value;
        var phone = form.elements["phone"].value;
        var location = form.elements["location"].value;
        var city = form.elements["city"].value;
        var state = form.elements["state"].value;
        var pinCode = form.elements["pinCode"].value;
        var address = form.elements["address"].value;

        let isValid = true;

        // Clear previous errors
        document.getElementById("fullNameError").textContent = "";
        document.getElementById("phoneError").textContent = "";
        document.getElementById("pinCodeError").textContent = "";

        // Validate Full Name
        if (!fullName || !/^[A-Za-z ]+$/.test(fullName)) {
          console.log(11111111);

          document.getElementById("fullNameError").textContent = "Please enter a valid full name.";
          isValid = false;
        }

        // Validate Phone
        if (!/^\d{10}$/.test(phone)) {
          document.getElementById("phoneError").textContent = "Phone number must contain exactly 10 digits.";
          isValid = false;
        }

        if (!/^\d{6}$/.test(pinCode)) {
          document.getElementById("pinCodeError").textContent = "Pin code must contain exactly 6 digits.";
          isValid = false;
        }

        return isValid;
      }
    </script>

    <!-- add address -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("addressForm");
        if (!form) return;

        form.addEventListener("submit", async function (event) {
          event.preventDefault();

          // Validation logic here...
          if (!validateForm()) return;

          const formData = new FormData(form);
          const requestData = {};
          formData.forEach((value, key) => requestData[key] = value);

          try {
            const response = await fetch("/addAddress", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(requestData),
            });

            const data = await response.json();
            window.location.href = "/CheckOutPage";
          } catch (error) {
            console.error("Error:", error);
          }
        });
      });

    </script>

    <!--payment method-->
    <script>
      async function order(event) {
        event.preventDefault();

        const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
        const paymentMethod = document.querySelector('input[name="selector"]:checked');

        if (!selectedAddress || !paymentMethod) {
          Swal.fire({
            icon: 'warning',
            title: 'Missing Information',
            text: 'Please select both an address and a payment method before proceeding.',
          });
          return;
        }

        const selectedAddressId = selectedAddress.value;
        const paymentMethodValue = paymentMethod.value;
        const totalAmount = document.getElementsByClassName('subTotal')[0].value;

        const dataToSend = {
          selectedAddressId: selectedAddressId,
          paymentMethod: paymentMethodValue,
          totalAmount: totalAmount
        };

        $.ajax({
          url: "/placeOrder",
          type: "POST",
          contentType: "application/json",
          data: JSON.stringify(dataToSend),
          success: function (response) {
            if (response.codSuccess == true || response.walletSuccess === true) {
              Swal.fire({
                title: "",
                text: "Order placed successfully",
                icon: "success",
                showConfirmButton: false,
                timer: 2000, // Set the delay in milliseconds
              });
              setTimeout(() => {
                window.location.href = "/order";
              }, 2000);
            }
            else if (response.razorpay) {
              razorpayPayment(response.razorpayOrder, dataToSend, response.key);
            }
          },
          error: function (error) {
            console.error("Fetch Error:", error);
          },
        });
      }



      function razorpayPayment(order, dataToSend, key) {
        var options = {
          key: key,
          amount: order.amount,
          currency: "INR",
          name: "Acme Corp",
          description: "Test Transaction",
          image: "https://example.com/your_logo",
          order_id: order.id,
          handler: function (response) {
            // alert(response.razorpay_payment_id);
            // alert(response.razorpay_order_id);
            // alert(response.razorpay_signature)
            verifyPayment(response, order);
          },
          prefill: {
            name: "Gaurav Kumar",
            email: "gaurav.kumar@example.com",
            contact: "9000090000",
          },
          notes: {
            address: "Razorpay Corporate Office",
          },
          theme: {
            color: "#F9D9BE",
          },
        };
        var rzp1 = new Razorpay(options);


        rzp1.on('payment.failed', function (response) {
          alert("payment failed ")
          fetch('/failedOrders', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ dataToSend })
          })
        })
        rzp1.open();
      }

      function verifyPayment(response, order) {
        console.log("verifyPayment called");
        $.ajax({
          url: "/verifyPayment",
          method: "post",
          data: {
            response,
            order,
          },
          success: (response) => {
            if (response.status) {
              console.log("status comes as true");
              window.location.href = "/order";  // ✅ This redirects
            } else {
              console.log("it's else case");
              Swal.fire("Payment verification failed", "", "error");
            }
          },
          error: (error) => {
            console.error("Verification error:", error);
            Swal.fire("Server error", "Could not verify payment", "error");
          }
        });
      }



    </script>

